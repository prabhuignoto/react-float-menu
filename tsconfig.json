{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist"
  },
  "include": [
    "src/react-float-menu.ts",
    "src/components/**/*.{ts,tsx,scss}",
    "src/icons/*.tsx",
    "src/utils/*.ts",
    "src/models/*.ts",
    "./globals.d.ts",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.d.ts"
  ]
}
